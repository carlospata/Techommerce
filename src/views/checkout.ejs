<!doctype html>
<html lang="en">
<head>
	<%- include('./partials/meta-info.ejs'); -%>
</head>

	<body>

		<!-- Start Header/Navigation -->
		<%- include('./partials/header.ejs'); -%>
		<!-- End Header/Navigation -->

		<!-- Start Hero Section -->
			<div class="hero">
				<div class="container">
					<div class="row justify-content-between">
						<div class="col-lg-5">
							<div class="intro-excerpt">
								<h1>Checkout</h1>
							</div>
						</div>
						<div class="col-lg-7">
							
						</div>
					</div>
				</div>
			</div>
		<!-- End Hero Section -->

		<div class="untree_co-section">
		    <div class="container">

		      <div class="row">
	
				<!-- parte lista ordini -->
		        <div class="col-md-6 mb-5 mb-md-0">
		          <h2 class="h3 mb-3 text-black">Last Orders List</h2>
		          <div class="p-3 p-lg-5 border bg-white">
		            <table class="table site-block-order-table mb-5">
						<thead>
						  <th>Nome Ordine </th>
						  <th>Total</th>
						</thead>
						<tbody>
						<% for(let i = 0; i< listOrder.length; i++){ %> 
						  <tr>
							<td>Ordine<%= i %>
								<ul>
									<% for(let j = 0; j< listOrder[i].length; j++){ %>
								<li> <%= listOrder[i][j].product_name %> <strong class="mx-2">x</strong> <%= listOrder[i][j].quantity %> </li>
								    <% } %>
								</ul>
							</td>
							<td>
						      
							</td>
						  </tr>
						  
						<% } %>
						</tbody>
					  </table>
		           
		          </div>
		        </div>
               <!-- finisce lista ordini -->



			   <!-- inizia totale degli ordini -->
		        <div class="col-md-6">
		          <div class="row mb-5">
		            <div class="col-md-12">
		              <h2 class="h3 mb-3 text-black">Total Orders price </h2>
		              <div class="p-3 p-lg-5 border bg-white">
		                <table class="table site-block-order-table mb-5">
		                  <thead>
		                    <th>Totale Speso </th>
		                    <th> <%= listOrderTotal %> </th>
		                  </thead>
		                </table>

		              

		                <div class="form-group">
		                  <form method="GET" action="/"> <button class="btn btn-black btn-lg py-3 btn-block" >Torna alla home </button> </form>
		                </div>

		              </div>
		            </div>
		          </div>

		        </div>
		      </div>
		      <!-- </form> -->
		    </div>
		  </div>

		<!-- Start Footer Section -->
		<%- include('./partials/footer.ejs'); -%>
		<!-- End Footer Section -->	

		<%- include('./partials/script.ejs'); -%>
	</body>

</html>